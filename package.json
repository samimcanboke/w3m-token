{
  "name": "web3moon-contracts",
  "version": "1.0.0",
  "description": "Web3Moon (W3M) Token Smart Contracts with Advanced Security and Governance",
  "scripts": {
    "build": "forge build",
    "test": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage",
    "test:fuzz": "forge test --fuzz-runs 10000",
    "clean": "forge clean",
    "deploy:sepolia": "forge script scripts/deploy.s.sol:DeployWeb3Moon --rpc-url sepolia --broadcast --verify",
    "deploy:mainnet": "forge script scripts/deploy.s.sol:DeployWeb3Moon --rpc-url mainnet --broadcast --verify",
    "deploy:polygon": "forge script scripts/deploy.s.sol:DeployWeb3Moon --rpc-url polygon --broadcast --verify",
    "deploy:testnet": "forge script scripts/deploy.s.sol:DeployTestnet --rpc-url sepolia --broadcast",
    "migrate": "forge script scripts/deploy.s.sol:MigrateWeb3Moon --rpc-url mainnet --broadcast",
    "echidna": "echidna-test . --contract Web3MoonEchidna --config echidna.yaml",
    "echidna:ci": "echidna-test . --contract Web3MoonEchidna --config echidna.yaml --test-limit 10000",
    "format": "forge fmt",
    "lint": "forge fmt --check",
    "postinstall": "echo 'Skipping forge install for now'",
    "update": "forge update",
    "collect-tokens": "node scripts/collect-all-tokens.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.15.0",
    "chai": "^4.5.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.1.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.1",
    "hardhat-gas-reporter": "^2.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^9.1.0"
  },
  "keywords": [
    "web3moon",
    "w3m",
    "token",
    "defi",
    "smart-contracts",
    "ethereum",
    "foundry",
    "timelock",
    "governance"
  ],
  "author": "Web3Moon Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/web3moon/contracts.git"
  },
  "bugs": {
    "url": "https://github.com/web3moon/contracts/issues"
  },
  "homepage": "https://web3moon.org"
}
